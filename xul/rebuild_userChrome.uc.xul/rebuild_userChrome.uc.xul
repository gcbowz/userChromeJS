    clickDirMenu: function(event){
      if(event.button == 1 || event.button == 2){
        event.stopPropagation();
        event.preventDefault();
        userChromejs.chgDirStat(event.target.dirName);
		const MenuStyleCube = 'font-style:italic;opacity:0.5;';
        if(event.target.firstChild && event.target.firstChild.firstChild)
          event.target.firstChild.firstChild.setAttribute('checked',!userChrome_js.dirDisable[event.target.dirName] );
        if(!!userChrome_js.dirDisable[event.target.dirName]) {
          event.target.setAttribute('style', MenuStyleCube);
		  if(event.target.firstChild && event.target.firstChild.firstChild) {
		  event.target.firstChild.firstChild.setAttribute('style', MenuStyleCube);
		  }
		}
        else {
          event.target.removeAttribute('style');
		  if(event.target.firstChild && event.target.firstChild.firstChild) {
			event.target.firstChild.firstChild.removeAttribute('style');
		  }
		}
      }
    },

    clickDirMenuitem: function(event,stop){
		const MenuitemStyleCube = 'font-style: italic;opacity: 0.5;';
		var MenuitemStyle = event.target.getAttribute('style').toString();
		if (event.target.parentNode.parentNode) {
			var MenuitemStylePN = event.target.parentNode.parentNode.getAttribute('style').toString();
		}
		if(event.button == 1 || event.button == 2) {//即鼠标中右键
			event.stopPropagation();
			event.preventDefault();
			userChromejs.chgDirStat(event.target.dirName);
			event.target.setAttribute('checked',!userChrome_js.dirDisable[event.target.dirName] );
			if (!!userChrome_js.dirDisable[event.target.dirName]) {
				MenuitemStyle = MenuitemStyle + MenuitemStyleCube;
				event.target.setAttribute('style', MenuitemStyle);
				if (event.target.parentNode.parentNode) {
					MenuitemStylePN = MenuitemStylePN + MenuitemStyleCube;
					event.target.parentNode.parentNode.setAttribute('style', MenuitemStylePN);
				}
			}
			else {
				MenuitemStyle = MenuitemStyle.replace(/(font-style|opacity):[^;]+;/g, '');
				event.target.setAttribute('style', MenuitemStyle);
				if (event.target.parentNode.parentNode) {
					MenuitemStylePN = MenuitemStylePN.replace(/(font-style|opacity):[^;]+;/g, '');
					event.target.parentNode.parentNode.setAttribute('style', MenuitemStylePN);
				}
			}
		}
		else {//event.button == 0//即鼠标左键
			if (!userChrome_js.dirDisable[event.target.dirName]) {//与中右键情形刚好相反，因oncommand已在切换状态的原因
